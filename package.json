{
  "name": "google-app-engine-blog",
  "description": "A NodeJS/Express blog server app running on Google App Engine.",
  "version": "1.0.0",
  "homepage": "https://github.com/dancrowley251/GAEBlog",
  "license": "Apache Version 2.0",
  "author": "Dan Crowley",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run build-sass",
    "build-ts": "tsc",
    "build-sass": "node-sass src/css/main.scss public/css/main.css",
    "serve": "node dist/server.js",
    "test": "repo-tools test app -- dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "gcp-build": "npm run build",
    "deploy": "gcloud app deploy",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "copy-static-assets": "ts-node copyStaticAssets.ts"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.2",
    "helmet": "^3.16.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/express-handlebars": "0.0.30",
    "@types/helmet": "0.0.43",
    "@types/shelljs": "^0.8.4",
    "concurrently": "^4.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0"
  }
}
