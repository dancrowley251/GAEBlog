{
  "name": "google-app-engine-blog",
  "description": "A NodeJS/Express blog server app running on Google App Engine.",
  "version": "1.0.0",
  "homepage": "https://github.com/dancrowley251/GAEBlog",
  "license": "Apache License 2.0",
  "author": "Dan Crowley",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run build-sass",
    "build-ts": "tsc",
    "build-sass": "node-sass src/css/main.scss public/css/main.css",
    "serve": "node dist/server.js",
    "test": "jest --watch",
    "repo-test": "repo-tools test app -- dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "gcp-build": "npm run build",
    "deploy": "gcloud app deploy",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js -e js,hbs"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.2",
    "helmet": "^3.16.0",
    "jquery": "^3.4.0",
    "popper.js": "^1.15.0"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.0.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@types/express-handlebars": "0.0.30",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.11",
    "@types/shelljs": "^0.8.4",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^24.7.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dancrowley251/GAEBlog"
  }
}
